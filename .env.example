# Rust Sci-Hub MCP Configuration Example
# Copy this file to .env and modify values as needed

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# Server configuration
MCP_SERVER_PORT=3000

# Download directory for academic papers
DOWNLOAD_DIR=./downloads

# Cache directory for metadata
CACHE_DIR=./.metadata_cache

# Rate limiting (requests per second)
RATE_LIMIT=1

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Sci-Hub mirror URLs (space-separated)
# SCI_HUB_MIRRORS="https://sci-hub.se https://sci-hub.st"

# Enable/disable specific features
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=false

# Development settings
DEV_MODE=false
DEBUG_REQUESTS=false